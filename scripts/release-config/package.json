    "test": "eslint '*.js'"
  },
  "dependencies": {
    "@octoherd/cli": "^3.6.5",
    "@stoe/octoherd-script-common": "latest",
    "octokit-plugin-create-pull-request": "^4.1.2"
  },
  "prettier": "@github/prettier-config"
